<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@null">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/cardview_margin"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        app:cardElevation="@dimen/cardview_elevation"
        app:cardPreventCornerOverlap="true"
        android:id="@+id/live_cardview">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游客"
                android:id="@+id/chat_tv_nickname"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:textColor="@color/color_primary_dark"
                android:id="@+id/chat_tv_divider"
                android:layout_toRightOf="@+id/chat_tv_nickname" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="弹幕"
                android:textSize="14sp"
                android:textColor="@color/color_primary_text"
                android:id="@+id/chat_tv_content"
                android:layout_toRightOf="@+id/chat_tv_divider"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>