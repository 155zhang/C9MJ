<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_margin"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        app:cardElevation="@dimen/cardview_elevation"
        app:cardPreventCornerOverlap="true"
        android:elevation="@dimen/widget_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/imageView6"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/color_primary" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView7"
                android:background="#f2e0e0"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="105dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/textView11"
                android:layout_below="@+id/imageView6"
                android:layout_alignBottom="@+id/imageView7"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView7"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textSize="@dimen/textsize_primary"
                android:textColor="@color/color_primary_text"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80757575"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="房间名"
                    android:id="@+id/textView12"
                    android:textSize="@dimen/textsize_secondary"
                    android:textColor="@color/color_icons"
                    android:padding="5dp"
                    android:singleLine="true" />
            </FrameLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>